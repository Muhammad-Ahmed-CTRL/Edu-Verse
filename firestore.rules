rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Minimal development rules: allow reads/writes for authenticated users.
    // WARNING: This is permissive and intended only for local/dev testing.
    function isSignedIn() { return request.auth != null; }

    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}